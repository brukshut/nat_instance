{
  "variables": {
    "access_key": "{{env `AWS_ACCESS_KEY_ID`}}",
    "aws_vpc_id": "{{env `AWS_VPC_ID`}}",
    "aws_subnet_id": "{{env `AWS_SUBNET_ID`}}",
    "secret_key": "{{env `AWS_SECRET_ACCESS_KEY`}}"
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `access_key`}}",
      "secret_key": "{{user `secret_key`}}",
      "region": "us-west-1",
      "vpc_id": "{{user `aws_vpc_id`}}",
      "subnet_id": "{{user `aws_subnet_id`}}",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "debian-stretch-hvm-x86_64-gp2-*",
          "root-device-type": "ebs"
        },
        "owners": ["379101102735"],
        "most_recent": "true"
      },
      "instance_type": "t2.micro",
      "ssh_username": "admin",
      "ami_name": "gturn-nat-{{timestamp}}",
      "encrypt_boot": true,
      "ami_block_device_mappings": [{
        "device_name": "xvda",
        "volume_size": 12,
        "volume_type": "gp2",
        "delete_on_termination": true
      }],
      "tags": {
        "Name": "gturn-nat",
        "OS_Version": "debian",
        "Release": "stretch"
      }
    }
  ],
  "provisioners": [
    {
      "type": "file",
      "source": "/Users/cgough/.ssh/id_rsa.pub",
      "destination": "/tmp/authorized_keys"
    },
    {
      "type": "file",
      "source": "../../shared/files/dhclient.conf",
      "destination": "/tmp/dhclient.conf"
    },
    {
      "type": "file",
      "source": "../../shared/files/eni_ctl.sh",
      "destination": "/tmp/eni_ctl.sh"
    },
    {
      "type": "file",
      "source": "../../shared/files/eni.service",
      "destination": "/tmp/eni.service"
    },
    {
      "type": "file",
      "source": "files/masquerade.sh",
      "destination": "/tmp/masquerade.sh"
    },
    {
      "type": "file",
      "source": "../../shared/files/motd",
      "destination": "/tmp/motd"
    },
    {
      "type": "file",
      "source": "../../shared/files/add_routes.sh",
      "destination": "/tmp/add_routes.sh"
    },
    {
      "type": "file",
      "source": "files/interfaces",
      "destination": "/tmp/interfaces"
    },
    {
      "type": "shell",
      "scripts": [
        "../../shared/scripts/install_packages.sh",
        "../../shared/scripts/build_emacs.sh",
        "../../shared/scripts/create_user.sh",
        "../../shared/scripts/dotfiles.sh",
        "../../shared/scripts/configure_eni.sh",
        "../../shared/scripts/configure_interfaces.sh",
        "scripts/configure_nat.sh",
        "../../shared/scripts/post_install.sh"
      ]
    }
  ]
}
